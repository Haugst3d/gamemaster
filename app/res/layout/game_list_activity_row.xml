<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/game_list_activity_row_layout_back"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        android:padding="6dp"
        android:tag="game_list_activity_row_layout_back" >

        <TextView
            android:id="@+id/game_list_activity_row_layout_back_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="#666666"
            android:textIsSelectable="false"
            android:textStyle="bold" />

        <Button
            android:id="@+id/game_list_activity_row_btnCollect"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_list_activity_row_layout_back_name"
            android:drawableLeft="@drawable/ic_favorite"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="collect"
            android:textColor="#666666"
            android:textStyle="bold" />

        <Button
            android:id="@+id/game_list_activity_row_btnDetails"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_list_activity_row_layout_back_name"
            android:layout_toRightOf="@+id/game_list_activity_row_btnCollect"
            android:drawableLeft="@drawable/ic_details"
            android:gravity="left|center_vertical"
            android:text="details"
            android:textColor="#666666"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/game_list_activity_row_layout_front"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="6dp"
        android:tag="game_list_activity_row_layout_front" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/game_icon_description"
            android:focusable="false"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:gravity="top|left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/toptext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:gravity="center_vertical"
                android:textColor="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/middletext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/bottomtext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtPublisher"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>