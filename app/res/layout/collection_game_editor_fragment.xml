<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:fadingEdge="none"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/collection_game_editor_fragment_editors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/collection_game_editor_fragment_existing_copies"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <!-- Existing games will be inserted here -->
        </LinearLayout>

        <TextView
            android:id="@+id/collection_game_editor_fragment_lbl_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Region" />

        <Spinner
            android:id="@+id/collection_game_editor_fragment_spinner_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/collection_game_editor_fragment_lbl_console"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Console" />

        <Spinner
            android:id="@+id/collection_game_editor_fragment_spinner_console"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>